@model Chuck_Norris_Web_Application.Models.CategoriesViewModel



<div class="row" id="dvJokes">
    <div class="card w-100">
        <div class="card-body" style="background-color:antiquewhite">
            <table class="table table-borderless table-thead-bordered table-nowrap table-align-middle card-table">
                <thead>
                    <tr>
                        <th>Icon</th>
                        <th>Category</th>
                        <th>Updated</th>
                        <th>Joke</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ChuckNorrisViewModel != null)
                    {
                        <tr>
                            <td class="align-middle">
                                <a class="d-flex align-items-center">
                                    <div class="avatar avatar-soft-primary avatar-circle">
                                        <span class="avatar-initials"><img src="@Model.ChuckNorrisViewModel.icon_url" style="width:50%"/></span>
                                    </div>
                                </a>
                            </td>
                            <td>
                                @Model.ChuckNorrisViewModel.categories[0]
                            </td>
                            <td>
                                @{
                                    var u = DateTime.Parse(Model.ChuckNorrisViewModel.updated_at);
                                }
                                @u.ToString("dd-MM-yyyy hh:mm:ss")
                            </td>
                            <td>@Model.ChuckNorrisViewModel.value</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>No Jokes at the moment, Chuck Norris is in the Phillipines.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
